                    </div>
                    <div class="clearfix mb8"/>
                </div> 
            </div>   
        </template>

        <template inherit_id="web.external_layout_striped" id="add_header">
            <xpath expr="//div" position="replace">
                <t t-call="website_account_extension.custom_comikha_header_section"/>
            </xpath>
            <xpath expr="//div[2]" position="replace"/>
